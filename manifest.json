{
  "manifest_version": 3,
  "name": "Background Color Changer",
  "version": "1.2",
  "description": "Changes the background color of the currecnt tab via context menu.",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matchs": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
